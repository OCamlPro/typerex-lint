begin library "ocp-lint-lib"
  files = [
    "lint_parallel_loop.ml"
    "lint_actions.ml"
    "lint.ml"
  ]
  requires = [
    "dynlink"
    "ocp-lint-output"
    "ocp-lint-api-types"
    "ocp-lint-api"
  ]
end

begin program "ocp-lint"
  files = [
        "main.ml"
  ]
  requires = [
    "ocp-lint-lib"
    "ocp-lint-plugin-sempatch"
    "ocp-lint-plugin-files"
    "ocp-lint-plugin-text"
    "ocp-lint-plugin-typedtree"
    "ocp-lint-plugin-parsetree"
    "ocp-lint-plugin-complex"
  ]
  link = [ "-linkall" ]
end

begin program "ocp-lint-minimal"
  files = [
     "main.ml"
  ]
  requires = [
        "ocp-lint-lib"
        "ocplib-compiler"
  ]
  link = [ "-linkall" ]
end
