begin library "ocp-lint-api-types"
  files = [
    "lint_map.ml"
    "lint_input.ml"
    "lint_warning_decl.ml"
    "lint_types.ml"
    "lint_plugin_error.ml"
    "lint_warning_types.ml"
    "lint_plugin_types.ml"
  ]
  requires = [
    "compiler-libs"
    "ocp-lint-utils"
  ]
end

begin library "ocp-lint-api"
  files = [
    "lint_warning.ml"
    "lint_plugin.ml"
    "lint_plugin_api.ml"
  ]
  requires = [
    (* Compiler libs (Location, Longident, etc. *)
    "compiler-libs"

    (* Other libraries: sempatch and some iterators. *)
    "ocplib-sempatch"
    "ocplib-compiler"

    (* Internal dependencies. *)
    "ocp-lint-config"
    "ocp-lint-db"
    "ocp-lint-api-types"
    "ocp-lint-init"
  ]
end
